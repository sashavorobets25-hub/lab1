# –ë–∞–∑–∞ –¥–∞–Ω–∏—Ö —Ç–æ–≤–∞—Ä—ñ–≤
STORE_ITEMS = {
    '–º–æ–ª–æ–∫–æ': 35.50,
    '—Ö–ª—ñ–±': 21.00,
    '—è–π—Ü—è': 65.25,
    '—Å–∏—Ä': 150.75
}

def main():
    while True:
        print("–£ –Ω–∞—è–≤–Ω–æ—Å—Ç—ñ:", ", ".join(STORE_ITEMS.keys()))
        order = input("–í–≤–µ–¥—ñ—Ç—å —Ç–æ–≤–∞—Ä–∏ —á–µ—Ä–µ–∑ –∫–æ–º—É: ").split(",")
        order = [item.strip().lower() for item in order]

        total = 0
        missing = []

        for item in order:    # –ø—Ä–æ—Ö–æ–¥–∏–º–æ –ø–æ –∫–æ–∂–Ω–æ–º—É —Ç–æ–≤–∞—Ä—É, —è–∫–∏–π –≤–≤—ñ–≤ –∫–æ—Ä–∏—Å—Ç—É–≤–∞—á
            if item in STORE_ITEMS:   # —è–∫—â–æ —Ç–æ–≤–∞—Ä —î –≤ –Ω–∞—à—ñ–π –±–∞–∑—ñ (STORE_ITEMS)
                total += STORE_ITEMS[item]   # –¥–æ–¥–∞—î–º–æ –π–æ–≥–æ —Ü—ñ–Ω—É –¥–æ –∑–∞–≥–∞–ª—å–Ω–æ—ó —Å—É–º–∏ (total)
            else:
                missing.append(item)    # —è–∫—â–æ —Ç–æ–≤–∞—Ä—É –Ω–µ–º–∞—î –≤ –±–∞–∑—ñ ‚Üí –∑–∞–ø–∏—Å—É—î–º–æ –π–æ–≥–æ —É —Å–ø–∏—Å–æ–∫ "missing"

        if missing:
            print("‚ùå –ù–µ–º–∞—î –≤ –Ω–∞—è–≤–Ω–æ—Å—Ç—ñ:", ", ".join(missing))
        else:
            choice = input("1 - –∫—É–ø–∏—Ç–∏, 2 - –ø–µ—Ä–µ–≥–ª—è–Ω—É—Ç–∏ —Ü—ñ–Ω—É: ")
            if choice == "1":
                print(f"üõí –ó–∞–º–æ–≤–ª–µ–Ω–Ω—è –æ—Ñ–æ—Ä–º–ª–µ–Ω–æ! –î–æ —Å–ø–ª–∞—Ç–∏ {total:.2f} –≥—Ä–Ω")
            elif choice == "2":
                print(f"üìà –ó–∞–≥–∞–ª—å–Ω–∞ –≤–∞—Ä—Ç—ñ—Å—Ç—å: {total:.2f} –≥—Ä–Ω")

        again = input("–©–µ –æ–¥–Ω–µ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è? (—Ç–∞–∫/–Ω—ñ): ")
        if again.lower() != "—Ç–∞–∫":
            print("–î—è–∫—É—î–º–æ –∑–∞ –ø–æ–∫—É–ø–∫—É! üëã")
            break

if __name__ == "__main__":
    main()
